

<DynamicElement TagName="div" class="@classname">
    @ChildContent
</DynamicElement>

@code {
    string classname => 
        new CssBuilder("tab-content")
            .AddClass(Class)
        .Build();
    
    [Parameter] private string Class { get; set; }
    [Parameter] private RenderFragment ChildContent { get; set; }
}