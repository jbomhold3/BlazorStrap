

<DynamicElement TagName="h3" class="@classname">
    @ChildContent
</DynamicElement>


@code {
    private string classname => 
        new CssBuilder("popover-header")
            .AddClass(Class)
        .Build();

    [Parameter] private string Class { get; set; }
    [Parameter] private RenderFragment ChildContent { get; set; }
}