@inherits ColumnBase

<DynamicElement TagName="label" class="@classname" @attributes="UnknownParameters">
    @ChildContent
</DynamicElement>

@code {
    string classname =>
        new CssBuilder()
            .AddClass("form-check-label", IsCheck)
            .AddClass("col-form-label", GetColumnClass(null) != null)
            .AddClass(GetColumnClass(null))
            .AddClass(Class)
        .Build();

    [Parameter] private bool IsCheck { get; set; }
    [Parameter] private string Class { get; set; }
    [Parameter] private RenderFragment ChildContent { get; set; }
}
