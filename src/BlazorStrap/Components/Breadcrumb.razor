@inherits BootstrapComponentBase

<nav aria-label="breadcrumb">
    <DynamicElement TagName="ol" class="@classname" @attributes="UnknownParameters">
        @ChildContent
    </DynamicElement>
</nav>

@code {
    string classname =>
        new CssBuilder()
            .AddClass("breadcrumb")
            .AddClass(Class)
        .Build();

    [Parameter] private string Class { get; set; }
    [Parameter] private RenderFragment ChildContent { get; set; }
}
